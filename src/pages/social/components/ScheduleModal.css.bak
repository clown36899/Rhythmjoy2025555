/* ScheduleModal.css - ScheduleModal 컴포넌트 전용 스타일 */

/* ===== CSS 변수 정의 ===== */
:root {
  /* 색상 변수 */
  --color-gray-300: #d1d5db;
  --color-gray-400: #9ca3af;
  --color-gray-600: #4b5563;
  --color-gray-700: #374151;
  --color-gray-800: #1f2937;
  
  --color-blue-300: #93c5fd;
  --color-blue-400: #60a5fa;
  
  --color-green-500: #22c55e;
  --color-green-600: #16a34a;
  --color-green-700: #15803d;
  
  --color-red-300: #fca5a5;
  --color-red-400: #f87171;
  
  /* 간격 */
  --spacing-1: 0.25rem;
  --spacing-2: 0.5rem;
  --spacing-3: 0.75rem;
  --spacing-4: 1rem;
  
  /* Border Radius */
  --radius-lg: 0.5rem;
  
  /* 트랜지션 */
  --transition-colors: color 0.2s ease, background-color 0.2s ease;
}

/* ===== 모달 오버레이 ===== */
.schm-modal-overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.7);
  padding: var(--spacing-4);
}

/* ===== 모달 컨테이너 ===== */
.schm-modal-container {
  background-color: var(--color-gray-800);
  border-radius: var(--radius-lg);
  width: 100%;
  max-width: 28rem;
  max-height: 90svh;
  overflow-y: auto;
}

/* ===== 모달 본문 ===== */
.schm-modal-body {
  padding: 1.5rem;
}

/* ===== 헤더 ===== */
.schm-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-4);
}

.schm-header-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: white;
}

.schm-header-date {
  font-size: 0.875rem;
  color: var(--color-gray-400);
}

.schm-close-btn {
  color: var(--color-gray-400);
  transition: var(--transition-colors);
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.schm-close-btn:hover {
  color: white;
}

.schm-close-icon {
  font-size: 1.5rem;
}

/* ===== 폼 ===== */
.schm-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

.schm-form-group {
  display: flex;
  flex-direction: column;
}

.schm-form-label {
  display: block;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-gray-300);
  margin-bottom: var(--spacing-1);
}

.schm-form-input {
  width: 100%;
  background-color: var(--color-gray-700);
  color: white;
  border-radius: var(--radius-lg);
  padding: 0.5rem 0.75rem;
  outline: none;
  border: none;
}

.schm-form-input:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--color-green-500);
}

.schm-form-input::placeholder {
  color: var(--color-gray-400);
}

.schm-form-textarea {
  width: 100%;
  background-color: var(--color-gray-700);
  color: white;
  border-radius: var(--radius-lg);
  padding: 0.5rem 0.75rem;
  outline: none;
  border: none;
  resize: none;
}

.schm-form-textarea:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--color-green-500);
}

/* ===== 시간 입력 그리드 ===== */
.schm-time-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-3);
}

/* ===== 버튼 그룹 ===== */
.schm-button-group {
  display: flex;
  gap: var(--spacing-3);
}

.schm-button-flex {
  flex: 1;
}

.schm-cancel-button {
  flex: 1;
  background-color: var(--color-gray-700);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-lg);
  font-weight: 500;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
}

.schm-cancel-button:hover {
  background-color: var(--color-gray-600);
}

.schm-cancel-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.schm-submit-button {
  flex: 1;
  background-color: var(--color-green-600);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-lg);
  font-weight: 500;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
}

.schm-submit-button:hover {
  background-color: var(--color-green-700);
}

.schm-submit-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ===== 일정 추가 버튼 ===== */
.schm-add-button {
  width: 100%;
  background-color: var(--color-green-600);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-lg);
  font-weight: 500;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
  margin-bottom: var(--spacing-4);
}

.schm-add-button:hover {
  background-color: var(--color-green-700);
}

.schm-add-icon {
  margin-right: var(--spacing-1);
}

/* ===== 일정 목록 ===== */
.schm-schedule-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2);
}

.schm-empty-state {
  text-align: center;
  padding: 2rem 0;
  color: var(--color-gray-400);
  font-size: 0.875rem;
}

/* ===== 일정 아이템 ===== */
.schm-schedule-item {
  background-color: var(--color-gray-700);
  border-radius: var(--radius-lg);
  padding: 0.75rem;
  border: 1px solid var(--color-gray-600);
}

.schm-schedule-content {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: var(--spacing-1);
}

.schm-schedule-info {
  flex: 1;
}

.schm-schedule-title {
  color: white;
  font-weight: 500;
}

.schm-schedule-time {
  font-size: 0.875rem;
  color: var(--color-gray-400);
}

.schm-schedule-description {
  font-size: 0.875rem;
  color: var(--color-gray-400);
  margin-top: var(--spacing-1);
}

/* ===== 일정 액션 버튼 ===== */
.schm-schedule-actions {
  display: flex;
  gap: var(--spacing-2);
  margin-left: var(--spacing-2);
}

.schm-edit-button {
  color: var(--color-blue-400);
  transition: var(--transition-colors);
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  font-size: 1rem;
}

.schm-edit-button:hover {
  color: var(--color-blue-300);
}

.schm-delete-button {
  color: var(--color-red-400);
  transition: var(--transition-colors);
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  font-size: 1rem;
}

.schm-delete-button:hover {
  color: var(--color-red-300);
}
