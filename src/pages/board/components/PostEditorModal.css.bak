/* PostEditorModal.css - PostEditorModal 컴포넌트 전용 스타일 */

/* ===== CSS 변수 정의 ===== */
:root {
  /* 색상 변수 */
  --pem-gray-300: #d1d5db;
  --pem-gray-400: #9ca3af;
  --pem-gray-600: #4b5563;
  --pem-gray-700: #374151;
  --pem-gray-800: #1f2937;
  
  --pem-blue-300: #93c5fd;
  --pem-blue-400: #60a5fa;
  --pem-blue-500: #3b82f6;
  --pem-blue-600: #2563eb;
  --pem-blue-700: #1d4ed8;
  
  /* 간격 */
  --pem-spacing-1: 0.25rem;
  --pem-spacing-2: 0.5rem;
  --pem-spacing-3: 0.75rem;
  --pem-spacing-4: 1rem;
  
  /* Border Radius */
  --pem-radius-lg: 0.5rem;
  
  /* Z-index */
  --pem-z-modal: 999999;
  
  /* 트랜지션 */
  --pem-transition-colors: color 0.2s ease, background-color 0.2s ease;
}

/* ===== 모달 오버레이 ===== */
.pem-modal-overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--pem-spacing-4);
  z-index: var(--pem-z-modal);
}

/* ===== 모달 컨테이너 ===== */
.pem-modal-container {
  background-color: var(--pem-gray-800);
  border-radius: var(--pem-radius-lg);
  max-width: 42rem;
  width: 100%;
  max-height: 90svh;
  position: relative;
  z-index: var(--pem-z-modal);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ===== 모달 헤더 ===== */
.pem-modal-header {
  padding: var(--pem-spacing-4);
  border-bottom: 1px solid var(--pem-gray-700);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pem-modal-title {
  font-size: 1.25rem;
  line-height: 1.75rem;
  font-weight: 700;
  color: white;
}

.pem-close-btn {
  color: var(--pem-gray-400);
  transition: var(--pem-transition-colors);
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.pem-close-btn:hover {
  color: white;
}

.pem-close-icon {
  font-size: 1.5rem;
  line-height: 2rem;
}

/* ===== 모달 본문 (Form) ===== */
.pem-form {
  flex: 1;
  overflow-y: auto;
  padding: var(--pem-spacing-4);
}

.pem-form-content {
  display: flex;
  flex-direction: column;
  gap: var(--pem-spacing-4);
}

/* ===== 폼 그룹 ===== */
.pem-form-group {
  /* Container for each form field */
}

.pem-label {
  display: block;
  color: var(--pem-gray-300);
  font-size: 0.875rem;
  line-height: 1.25rem;
  font-weight: 500;
  margin-bottom: var(--pem-spacing-2);
}

.pem-input {
  width: 100%;
  background-color: var(--pem-gray-700);
  color: white;
  border-radius: var(--pem-radius-lg);
  padding: 0.5rem 0.75rem;
  outline: none;
  border: none;
}

.pem-input:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--pem-blue-500);
}

.pem-input::placeholder {
  color: var(--pem-gray-400);
}

.pem-select {
  width: 100%;
  background-color: var(--pem-gray-700);
  color: white;
  border-radius: var(--pem-radius-lg);
  padding: 0.5rem 0.75rem;
  outline: none;
  border: none;
  cursor: pointer;
}

.pem-select:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--pem-blue-500);
}

.pem-textarea {
  width: 100%;
  background-color: var(--pem-gray-700);
  color: white;
  border-radius: var(--pem-radius-lg);
  padding: 0.5rem 0.75rem;
  outline: none;
  border: none;
  resize: none;
}

.pem-textarea:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--pem-blue-500);
}

.pem-textarea::placeholder {
  color: var(--pem-gray-400);
}

/* ===== 공지사항 박스 ===== */
.pem-notice-box {
  background-color: rgba(30, 58, 138, 0.2);
  border: 1px solid rgba(59, 130, 246, 0.5);
  border-radius: var(--pem-radius-lg);
  padding: var(--pem-spacing-4);
}

.pem-notice-label {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  cursor: pointer;
}

.pem-checkbox {
  width: 1.25rem;
  height: 1.25rem;
  border-radius: 0.25rem;
  border: 1px solid var(--pem-gray-600);
  color: var(--pem-blue-600);
  cursor: pointer;
}

.pem-checkbox:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--pem-blue-500);
}

.pem-notice-content {
  flex: 1;
}

.pem-notice-title {
  color: var(--pem-blue-300);
  font-weight: 500;
}

.pem-notice-desc {
  color: var(--pem-blue-400);
  font-size: 0.75rem;
  line-height: 1rem;
  margin-top: var(--pem-spacing-1);
}

/* ===== 모달 푸터 ===== */
.pem-modal-footer {
  padding: var(--pem-spacing-4);
  border-top: 1px solid var(--pem-gray-700);
  flex-shrink: 0;
  display: flex;
  gap: var(--pem-spacing-2);
}

.pem-btn {
  flex: 1;
  padding: 0.5rem;
  border-radius: var(--pem-radius-lg);
  font-weight: 500;
  transition: var(--pem-transition-colors);
  cursor: pointer;
  border: none;
}

.pem-btn-cancel {
  background-color: var(--pem-gray-700);
  color: white;
}

.pem-btn-cancel:hover {
  background-color: var(--pem-gray-600);
}

.pem-btn-submit {
  background-color: var(--pem-blue-600);
  color: white;
}

.pem-btn-submit:hover {
  background-color: var(--pem-blue-700);
}

.pem-btn-submit:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
