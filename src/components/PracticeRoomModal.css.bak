/* PracticeRoomModal.css - PracticeRoomModal 컴포넌트 전용 스타일 */

/* ===== CSS 변수 정의 ===== */
:root {
  /* 색상 변수 */
  --color-gray-50: #f9fafb;
  --color-gray-200: #e5e7eb;
  --color-gray-300: #d1d5db;
  --color-gray-400: #9ca3af;
  --color-gray-500: #6b7280;
  --color-gray-600: #4b5563;
  --color-gray-700: #374151;
  --color-gray-800: #1f2937;
  --color-gray-900: #111827;

  --color-blue-400: #60a5fa;
  --color-blue-500: #3b82f6;
  --color-blue-600: #2563eb;
  --color-blue-700: #1d4ed8;

  --color-green-600: #16a34a;
  --color-green-700: #15803d;

  --color-red-600: #dc2626;
  --color-red-700: #b91c1c;

  --color-yellow-600: #ca8a04;
  --color-yellow-700: #a16207;

  /* 간격 */
  --spacing-1: 0.25rem;
  --spacing-2: 0.5rem;
  --spacing-3: 0.75rem;
  --spacing-4: 1rem;
  --spacing-6: 1.5rem;

  /* Border Radius */
  --radius-lg: 0.5rem;
  --radius-full: 9999px;

  /* Z-index */
  --z-modal-base: 50;
  --z-modal-high: 60;

  /* 트랜지션 */
  --transition-colors: color 0.2s ease, background-color 0.2s ease;
  --transition-shadow: box-shadow 0.2s ease;
  --transition-all: all 0.2s ease;
}

/* ===== 모달 오버레이 ===== */
.room-modal-overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--z-modal-base);
}

.room-modal-overlay-high {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--z-modal-high);
  padding: var(--spacing-4);
}

/* ===== 모달 컨테이너 ===== */
.room-modal-container {
  background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
  border-radius: 0;
  max-width: 56rem;
  width: 100%;
  max-height: 100dvh;
  height: 100dvh;
  overflow: hidden;
  margin: 0;
  display: flex;
  flex-direction: column;
  position: relative;
  border: none;
  box-shadow: none;
}

@media (min-width: 768px) {
  .room-modal-container {
    border-radius: 1rem;
    max-height: 90svh;
    height: auto;
    margin: 1rem;
    border: 1px solid #2a2a2a;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }
}

.room-modal-container-list {
  background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
  border-radius: 1rem;
  max-width: 72rem;
  width: 100%;
  margin: 0 var(--spacing-4);
  max-height: 95svh;
  overflow-y: auto;
  overflow-x: hidden;
  border: 1px solid #2a2a2a;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
}

.room-modal-container-form {
  background-color: var(--color-gray-800);
  border-radius: var(--radius-lg);
  max-width: 42rem;
  width: 100%;
  max-height: 90svh;
  overflow-y: auto;
}

/* ===== 모달 닫기 버튼 ===== */
.room-close-btn {
  position: absolute;
  top: var(--spacing-2);
  right: var(--spacing-2);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2.5rem;
  height: 2.5rem;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  color: white;
  border-radius: var(--radius-lg);
  transition: all 0.2s ease;
  cursor: pointer;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.room-close-btn:hover {
  background: rgba(220, 38, 38, 0.8);
  transform: scale(1.05);
  border-color: rgba(220, 38, 38, 0.5);
}

.room-close-icon {
  font-size: 1.25rem;
}

/* ===== Detail View - 헤더 ===== */
.room-detail-header {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.875rem 1rem;
  border-bottom: 1px solid #2a2a2a;
  background: rgba(255, 255, 255, 0.02);
}

@media (min-width: 768px) {
  .room-detail-header {
    padding: 1rem 1.5rem;
  }
}

.room-detail-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: white;
  letter-spacing: -0.02em;
  flex: 1;
}

@media (min-width: 768px) {
  .room-detail-title {
    font-size: 1.375rem;
  }
}

.room-detail-edit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.25rem;
  padding: 0.5rem 0.75rem;
  background-color: var(--color-blue-600);
  color: white;
  border-radius: 0.5rem;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
  font-size: 0.8125rem;
  font-weight: 500;
  white-space: nowrap;
}

@media (min-width: 768px) {
  .room-detail-edit-btn {
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }
}

.room-detail-edit-btn:hover {
  background-color: var(--color-blue-700);
}

/* ===== Detail View - 본문 ===== */
.room-detail-body {
  flex: 1;
  overflow-y: auto;
}

.room-detail-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  height: 100%;
}

/* ===== Detail View - Gallery ===== */
.room-gallery-container {

  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

.room-gallery-main {
  flex: 0 0 50vh;
  position: relative;

  display: flex;
  align-items: center;
  justify-content: center;
  height: 50vh;
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

@media (min-width: 768px) {
  .room-gallery-main {
    flex: 0 0 45vh;
    height: 45vh;
  }
}

.room-gallery-image {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  object-position: center;
  cursor: pointer;
}

.room-gallery-nav-btn {
  position: absolute;
  top: 50%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  color: white;
  width: 3rem;
  height: 3rem;
  display: none;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  transform: translateY(-50%);
  opacity: 0;
}

@media (min-width: 768px) {
  .room-gallery-nav-btn {
    display: flex;
  }

  .room-gallery-main:hover .room-gallery-nav-btn {
    opacity: 1;
  }
}

.room-gallery-nav-btn:hover {
  background: rgba(59, 130, 246, 0.8);
  border-color: rgba(59, 130, 246, 0.5);
  transform: translateY(-50%) scale(1.1);
}

.room-gallery-nav-btn-left {
  left: 1rem;
}

.room-gallery-nav-btn-right {
  right: 1rem;
}

.room-gallery-nav-icon {
  font-size: 1.5rem;
  width: 1.5rem;
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.room-gallery-counter {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  color: white;
  padding: 0.375rem 0.875rem;
  border-radius: 9999px;
  font-size: 0.875rem;
  font-weight: 600;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.room-gallery-indicators {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 0.5rem;
}

.room-gallery-indicator {
  width: 0.625rem;
  height: 0.625rem;
  border-radius: 9999px;
  transition: all 0.2s ease;
  cursor: pointer;
  border: none;
  background: rgba(255, 255, 255, 0.4);
}

.room-gallery-indicator:hover {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(1.2);
}

.room-gallery-indicator-active {
  background: #3b82f6;
  transform: scale(1.3);
}

/* ===== Detail View - Thumbnails ===== */
.room-thumbnails-container {
  /* background: #1a1a1a; */
  padding: 0.625rem 0.75rem;
  /* border-top: 1px solid #2a2a2a; */

  overflow: hidden;
  position: relative;
  flex: 0 0 auto;
}

@media (min-width: 768px) {
  .room-thumbnails-container {
    padding: 1rem;
    max-height: 6rem;
  }
}

.room-thumbnails-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 2rem;
  height: 2rem;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  cursor: pointer;
  z-index: 10;
  transition: all 0.2s ease;
  opacity: 0.7;
}

.room-thumbnails-arrow:hover {
  opacity: 1;
  background: rgba(59, 130, 246, 0.8);
  border-color: rgba(59, 130, 246, 0.5);
}

.room-thumbnails-arrow-left {
  left: 0.5rem;
}

.room-thumbnails-arrow-right {
  right: 0.5rem;
}

.room-thumbnails-arrow i {
  font-size: 1.25rem;
}

.room-thumbnails-list {
  display: flex;
  gap: 0.75rem;
  overflow-x: auto;
  overflow-y: hidden;
  scrollbar-width: thin;
  scrollbar-color: #3b82f6 #1a1a1a;
  scroll-behavior: smooth;
}

.room-thumbnails-list::-webkit-scrollbar {
  height: 6px;
}

.room-thumbnails-list::-webkit-scrollbar-track {
  background: #1a1a1a;
}

.room-thumbnails-list::-webkit-scrollbar-thumb {
  background: #3b82f6;
  border-radius: 3px;
}

.room-thumbnail-btn {
  flex-shrink: 0;
  width: 5rem;
  height: 4rem;
  border-radius: 0;
  overflow: hidden;
  border: 2px solid;
  transition: all 0.2s ease;
  cursor: pointer;
  background: none;
  padding: 0;
}

.room-thumbnail-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
}

.room-thumbnail-btn-active {
  border-color: #3b82f6;
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3);
}

.room-thumbnail-btn-inactive {
  border-color: #4b5563;
}

.room-thumbnail-btn-inactive:hover {
  border-color: #6b7280;
}

.room-thumbnail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: top;
}

/* ===== Detail View -/* Info Container */
.room-info-container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  padding: 1.5rem;
  padding-bottom: calc(1.5rem + var(--bottom-nav-height, 60px) + env(safe-area-inset-bottom));
}

@media (min-width: 768px) {
  .room-info-container {
    padding: 2rem;
    padding-bottom: calc(2rem + var(--bottom-nav-height, 60px) + env(safe-area-inset-bottom));
  }
}

.room-address-section {
  margin-bottom: 0;
}

.room-address-box {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(37, 99, 235, 0.05));
  box-shadow: 0 20px 25px -5px rgb(0 0 0 / 33%), 0 0 0 1px rgb(87 110 148 / 58%);
  padding: 0.875rem 1rem;
  border-radius: 0.5rem;
}

.room-address-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
}

.room-address-text {
  color: #e5e7eb;
  font-size: 0.875rem;
  word-break: break-all;
  line-height: 1.5;
}

.room-address-btns {
  display: flex;
  gap: 0.5rem;
  flex-shrink: 0;
}

.room-copy-btn {
  background-color: var(--color-blue-600);
  color: white;
  padding: 0.375rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.8125rem;
  font-weight: 500;
  transition: var(--transition-colors);
  border: none;
  cursor: pointer;
  white-space: nowrap;
}

.room-copy-btn:hover {
  background-color: var(--color-blue-700);
}

.room-map-btn {
  background-color: var(--color-green-600);
  color: white;
  padding: 0.375rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.8125rem;
  font-weight: 500;
  transition: var(--transition-colors);
  border: none;
  cursor: pointer;
  white-space: nowrap;
}

.room-map-btn:hover {
  background-color: var(--color-green-700);
}

.room-description-section {
  flex: 1;
}

.room-description-header {
  font-size: 1rem;
  font-weight: 600;
  color: white;
  margin-bottom: 0.625rem;
  display: flex;
  align-items: center;
}

.room-description-icon {
  width: 1.125rem;
  height: 1.125rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 0.5rem;
  color: var(--color-blue-400);
}

.room-description-box {
  padding: 0.75rem 0.875rem;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid #2a2a2a;
  border-radius: 0.5rem;
  overflow-y: auto;
  max-height: 120px;
}

@media (min-width: 768px) {
  .room-description-box {
    padding: 0.875rem 1rem;
    max-height: 200px;
  }
}

.room-description-text {
  color: #9ca3af;
  line-height: 1.5;
  word-break: break-word;
  white-space: pre-wrap;
  font-size: 0.8125rem;
}

@media (min-width: 768px) {
  .room-description-text {
    font-size: 0.875rem;
    line-height: 1.6;
  }
}

.room-additional-link {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  padding: 0.625rem 1rem;
  border-radius: 0.5rem;
  transition: all 0.2s ease;
  cursor: pointer;
  text-decoration: none;
  font-weight: 500;
  font-size: 0.875rem;
  box-shadow: 0 20px 25px -5px rgb(0 0 0 / 33%), 0 0 0 1px rgb(49 49 49 / 58%);
}

.room-additional-link:hover {
  background: linear-gradient(135deg, #1d4ed8, #1e40af);
  transform: translateY(-2px);
  box-shadow: 0 6px 12px -2px rgba(37, 99, 235, 0.4);
}

.room-additional-link-icon {
  margin-right: 0.5rem;
  font-size: 1rem;
}

/* ===== Bottom Close Button ===== */
.room-detail-close-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: #d1d5db;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  font-weight: 600;
  transition: all 0.2s ease;
  cursor: pointer;
  margin-top: 0.5rem;
}

.room-detail-close-btn:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(255, 255, 255, 0.2);
  color: white;
  transform: translateY(-1px);
}

/* ===== List View - Main Container ===== */
.room-list-padding {
  padding: 1.5rem;
}

.room-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.room-list-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-gray-900);
}

.room-list-header-btns {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.room-register-btn {
  padding: var(--spacing-2) var(--spacing-4);
  background-color: var(--color-blue-600);
  color: white;
  border-radius: var(--radius-lg);
  transition: var(--transition-colors);
  border: none;
  cursor: pointer;
}

.room-register-btn:hover {
  background-color: var(--color-blue-700);
}

.room-list-close-btn {
  color: var(--color-gray-400);
  transition: var(--transition-colors);
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.room-list-close-btn:hover {
  color: var(--color-gray-600);
}

.room-list-close-icon {
  font-size: 1.5rem;
}

/* ===== Loading Spinner ===== */
.room-loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 3rem 0;
}

.room-loading-spinner {
  animation: spin 1s linear infinite;
  border-radius: var(--radius-full);
  height: 2rem;
  width: 2rem;
  border: 2px solid transparent;
  border-bottom-color: var(--color-blue-600);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ===== Detail Page Layout ===== */
.room-detail-page {

  display: flex;
  flex-direction: column;
  /* padding-bottom: calc(var(--bottom-nav-height, 60px) + env(safe-area-inset-bottom)); */
  min-height: 100vh;
}

.room-detail-back-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  margin: 1rem;
  background-color: rgba(255, 255, 255, 0.1);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.5rem;
  font-size: 0.95rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.room-detail-back-btn:hover {
  background-color: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.3);
}

.room-detail-back-btn i {
  font-size: 1.25rem;
}

.room-detail-page-loading {
  min-height: 100dvh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  color: white;
  background: #0a0a0a;
}

.room-detail-page-loading i {
  font-size: 2rem;
  color: var(--color-blue-500);
}

/* ===== Modal Overlay (for list/form only) ===== */

/* ===== Room Grid ===== */
.room-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-2);
}

.room-card {
  background-color: white;
  border-radius: var(--radius-lg);
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: var(--transition-shadow);
  cursor: pointer;
}

.room-card:hover {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.room-card-image {
  width: 100%;
  height: 8rem;
  object-fit: cover;
  object-position: top;
}

.room-card-content {
  padding: 0.75rem;
}

.room-card-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--color-gray-900);
  margin-bottom: 0.25rem;
}

.room-card-admin-btns {
  display: flex;
  gap: 0.25rem;
  flex-shrink: 0;
}

.room-card-edit-btn {
  padding: 0.25rem var(--spacing-2);
  background-color: var(--color-yellow-600);
  color: white;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
}

.room-card-edit-btn:hover {
  background-color: var(--color-yellow-700);
}

.room-card-delete-btn {
  padding: 0.25rem var(--spacing-2);
  background-color: var(--color-red-600);
  color: white;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
}

.room-card-delete-btn:hover {
  background-color: var(--color-red-700);
}

/* ===== Contact Info ===== */
.room-contact-info {
  padding-top: 0.75rem;
  text-align: center;
  color: var(--color-gray-700);
  font-size: 0.875rem;
}

.room-contact-link {
  color: var(--color-blue-600);
  text-decoration: underline;
  cursor: pointer;
}

.room-contact-link:hover {
  color: var(--color-blue-800);
}

/* ===== Form Modal ===== */
.room-form-padding {
  padding: var(--spacing-4);
}

.room-form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-4);
}

.room-form-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: white;
}

.room-form-close-btn {
  color: var(--color-gray-400);
  transition: var(--transition-colors);
  cursor: pointer;
  background: none;
  border: none;
  padding: 0;
}

.room-form-close-btn:hover {
  color: white;
}

.room-form-close-icon {
  font-size: 1.25rem;
}

.room-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

/* ===== Form Elements ===== */
.room-form-group {
  display: block;
}

.room-form-label {
  display: block;
  color: var(--color-gray-300);
  font-size: 0.875rem;
  font-weight: 500;
  margin-bottom: 0.25rem;
}

.room-form-input {
  width: 100%;
  background-color: var(--color-gray-700);
  color: white;
  border-radius: var(--radius-lg);
  padding: 0.75rem var(--spacing-3);
  outline: none;
  border: none;
}

.room-form-input:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--color-blue-500);
}

.room-form-input::placeholder {
  color: var(--color-gray-500);
}

.room-form-textarea {
  width: 100%;
  background-color: var(--color-gray-700);
  color: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-2) 0.75rem;
  outline: none;
  border: none;
  resize: vertical;
}

.room-form-textarea:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--color-blue-500);
}

.room-form-textarea::placeholder {
  color: var(--color-gray-500);
}

.room-form-link-spacing {
  margin-bottom: var(--spacing-2);
}

/* ===== Image Upload ===== */
.room-file-input {
  width: 100%;
  color: var(--color-gray-300);
  border: none;
  background: none;
}

.room-file-input::file-selector-button {
  margin-right: var(--spacing-4);
  padding: var(--spacing-2) var(--spacing-4);
  border-radius: var(--radius-lg);
  border: 0;
  background-color: var(--color-blue-600);
  color: white;
  cursor: pointer;
}

.room-file-input::file-selector-button:hover {
  background-color: var(--color-blue-700);
}

.room-image-preview-container {
  margin-top: 0.75rem;
}

.room-drag-hint {
  color: var(--color-gray-400);
  font-size: 0.75rem;
  margin-bottom: var(--spacing-2);
}

.room-image-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-2);
}

.room-image-item {
  position: relative;
  cursor: move;
}

.room-image-item-dragging {
  opacity: 0.5;
}

.room-preview-image {
  width: 100%;
  height: 5rem;
  object-fit: cover;
  border-radius: var(--radius-lg);
  border: 2px solid var(--color-gray-600);
  transition: var(--transition-colors);
}

.room-preview-image:hover {
  border-color: var(--color-gray-400);
}

.room-image-remove-btn {
  position: absolute;
  top: 0.25rem;
  right: 0.25rem;
  background-color: var(--color-red-600);
  color: white;
  border-radius: var(--radius-full);
  width: 1.25rem;
  height: 1.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-colors);
  cursor: pointer;
  border: none;
}

.room-image-remove-btn:hover {
  background-color: var(--color-red-700);
}

.room-image-remove-icon {
  font-size: 0.75rem;
}

.room-image-order {
  position: absolute;
  top: 0.25rem;
  left: 0.25rem;
  background-color: var(--color-blue-600);
  color: white;
  border-radius: var(--radius-full);
  width: 1.25rem;
  height: 1.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.75rem;
  font-weight: 700;
}

.room-image-drag-icon {
  position: absolute;
  bottom: 0.25rem;
  right: 0.25rem;
  background-color: rgba(31, 41, 55, 0.7);
  color: white;
  border-radius: 0.25rem;
  padding: 0.25rem;
}

.room-drag-icon {
  font-size: 0.75rem;
}

/* ===== Form Buttons ===== */
.room-form-btns {
  display: flex;
  justify-content: flex-end;
  gap: 0.75rem;
  padding-top: var(--spacing-4);
}

.room-form-cancel-btn {
  padding: var(--spacing-2) var(--spacing-4);
  background-color: var(--color-gray-600);
  color: white;
  border-radius: var(--radius-lg);
  transition: var(--transition-colors);
  border: none;
  cursor: pointer;
}

.room-form-cancel-btn:hover {
  background-color: var(--color-gray-700);
}

.room-form-submit-btn {
  padding: var(--spacing-2) var(--spacing-4);
  background-color: var(--color-blue-600);
  color: white;
  border-radius: var(--radius-lg);
  transition: var(--transition-colors);
  border: none;
  cursor: pointer;
}

.room-form-submit-btn:hover {
  background-color: var(--color-blue-700);
}