/* EventSortModal.css */

/* ===== CSS Variables ===== */
:root {
    --sort-modal-bg-color: #1f2937;
    /* gray-800 */
    --sort-modal-text-color: white;
    --sort-modal-text-secondary: #9ca3af;
    /* gray-400 */
    --sort-modal-hover-bg: #4b5563;
    /* gray-600 */
    --sort-modal-active-bg: #2563eb;
    /* blue-600 */
    --sort-modal-radius: 0.5rem;
    --sort-modal-overlay-bg: rgba(0, 0, 0, 0.5);
}

/* ===== Modal Overlay ===== */
.sort-modal-overlay {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: var(--sort-modal-overlay-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 50;
    padding: 1rem;
}

/* ===== Modal Container ===== */
.sort-modal-container {
    background-color: var(--sort-modal-bg-color);
    border-radius: var(--sort-modal-radius);
    width: 100%;
    max-width: 28rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

/* ===== Modal Body ===== */
.sort-modal-body {
    padding: 1rem;
}

.sort-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.sort-modal-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--sort-modal-text-color);
    margin: 0;
}

.sort-modal-close-btn {
    color: var(--sort-modal-text-secondary);
    transition: color 0.2s ease;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.sort-modal-close-btn:hover {
    color: var(--sort-modal-text-color);
}

.sort-modal-close-icon {
    font-size: 1.25rem;
}

/* ===== Sort Options ===== */
.sort-options-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.sort-option-btn {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: var(--sort-modal-radius);
    transition: background-color 0.2s ease, color 0.2s ease;
    cursor: pointer;
    background-color: #374151;
    /* gray-700 */
    color: var(--sort-modal-text-secondary);
    border: none;
    text-align: left;
}

.sort-option-btn:hover {
    background-color: var(--sort-modal-hover-bg);
    color: var(--sort-modal-text-color);
}

.sort-option-btn.active {
    background-color: var(--sort-modal-active-bg);
    color: var(--sort-modal-text-color);
}

.sort-option-icon {
    font-size: 1.125rem;
}

.sort-option-text {
    font-weight: 500;
    flex: 1;
}

.sort-check-icon {
    font-size: 1.125rem;
    margin-left: auto;
}